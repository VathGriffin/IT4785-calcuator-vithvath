<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity" android:orientation="vertical" android:weightSum="2" android:padding="10dp" android:gravity="center">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lifecycle" android:textSize="24sp" android:textStyle="bold" android:padding="16dp" android:background="#000000" android:textColor="#FFFFFF"/>
    <TextView android:id="@+id/operator" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:textSize="24sp" android:textColor="#000000" android:background="#E1E1E1" android:padding="16dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.5" android:background="#E1E1E1" android:gravity="end|center_vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:id="@+id/result" android:textSize="50sp" android:textColor="#000000" android:padding="16dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="610dp" android:layout_weight="0.5" android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="CE" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonCE" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="C" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonC" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="BS" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonBS" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="/" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonFSlash" android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="7" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button7" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="8" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button8" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="9" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button9" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="x" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonX" android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="4" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button4" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="5" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button5" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="6" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button6" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="-" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonMinus" android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="1" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button1" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="2" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button2" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="3" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button3" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="+" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonPlus" android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="+/-" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonPlusMinus" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="0" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/button0" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="." android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonDot" android:layout_margin="5dp"/>
            <Button android:layout_width="0dp" android:layout_height="80dp" android:text="=" android:textColor="#000000" android:background="#E1E1E1" android:textSize="25sp" android:layout_weight="1" android:id="@+id/buttonEqual" android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>